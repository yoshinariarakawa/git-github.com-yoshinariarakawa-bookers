<h1>Books</h1>

<table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
          <td>
            <%= link_to "show", book_path(book.id) %>
          </td>
          <td>
            <%= link_to "edit", edit_book_path(book.id) %>
          </td>
          <td>
            <%= link_to "destroy", book_path(book.id), method: :delete,"data-confirm" => "本当に削除しますか？" %>

          </td>

      </tr>
     <% end %>
    </tbody>
</table>





<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <h4></h4>
  <%= f.submit 'Create Book' %>
<% end %>